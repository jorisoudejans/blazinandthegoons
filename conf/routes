# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /scripts                    controllers.Script.index()
GET     /scripts/:id                controllers.Script.get(id: Long)
POST    /scripts/create             controllers.Script.create()

GET     /manage                     controllers.Application.manage()
GET     /running                    controllers.Application.running()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file)
    