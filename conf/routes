# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Application.index()
GET     /director                   @controllers.Application.directorView()

# Scripts
GET     /api/scripts                    @controllers.Script.getAll()

GET     /api/scripts/connect                 @controllers.Script.socket()
GET     /api/scripts/:id                @controllers.Script.get(id: Long)
POST    /api/scripts/create             @controllers.Script.create()
POST    /api/scripts/:id/actions/create     @controllers.Script.addAction(id: Long)

# Live script
GET     /api/scripts/:id/start              @controllers.Script.startScript(id: Long)
GET     /api/scripts/:id/update             @controllers.Script.updateActiveScript(id: Long)


#Preset service
GET     /api/presets                    @controllers.Preset.index()
GET     /api/presets/:id                @controllers.Preset.get(id: Long)
POST    /api/presets/create             @controllers.Preset.create()

#Action service
GET     /api/actions                    @controllers.Action.getAll()
GET     /api/actions/:id                @controllers.Action.get(id: Long)
POST    /api/actions/create             @controllers.Action.create()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file)
    